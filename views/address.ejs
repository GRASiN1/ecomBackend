<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address</title>
</head>

<body>
    <form action="/address" method="post">
        <input type="text" name="fullName" placeholder="Fullname" />
        <input type="text" name="fullAddress" placeholder="Full Address">
        <input type="text" name="phoneNumber" placeholder="Phone Number">
        <input type="number" name="pincode" placeholder="pincode">
        <button type="submit">Save address</button>
    </form>
    <div>
        <% if (locals.addresses) { %>
            <table>
                <thead>
                    <th>Full Name</th>
                    <th>Full Address</th>
                    <th>Phone Number</th>
                    <th>Pincode</th>
                </thead>
                <tbody>
                    <form action="/select" method="post">
                        <% addresses.forEach( (address)=> { %>
                            <tr>
                                <label for="<% address.fullName %>"></label>
                                <td>
                                    <%= address.fullName %>
                                </td>
                                <td>
                                    <%= address.fullAddress %>
                                </td>
                                <td>
                                    <%= address.phoneNumber %>
                                </td>
                                <td>
                                    <%= address.pincode %>
                                </td>
                                </label>
                                <td>
                                    <input type="radio" name="selectedAddress" value="<%= JSON.stringify(address) %>" />
                                </td>
                            </tr>
                            <% }) %>
                                <button type="submit">Continue</button>
                    </form>
                </tbody>
            </table>
            <% } %>
    </div>
</body>

</html>