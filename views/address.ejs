<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Address</title>
</head>

<body>
    <%- include('./partials/navbar', {user: user}) %>
        <div class="container">
            <div class="container">
                <form action="/address" method="post" class="mt-3">
                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" aria-describedby="emailHelp"
                            name="fullName" placeholder="John Doe">
                    </div>
                    <div class="mb-3">
                        <label for="fullAddress" class="form-label">Full Address</label>
                        <input type="text" class="form-control" id="fullAddress" name="fullAddress"
                            placeholder="Haven st. near church">
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber"
                            placeholder="+587 567 684 326">
                    </div>
                    <div class="mb-3">
                        <label for="pincode" class="form-label">Pincode</label>
                        <input type="text" class="form-control" id="pincode" name="pincode" placeholder="226010">
                    </div>
                    <button type="submit" class="btn btn-primary">Save Address</button>
                </form>
            </div>
            <div class="container mt-2">
                <% if (locals.addresses) { %>
                    <form action="/select" method="post">
                        <table class="table">
                            <thead>
                                <th>Full Name</th>
                                <th>Full Address</th>
                                <th>Phone Number</th>
                                <th>Pincode</th>
                            </thead>
                            <tbody>
                                <% addresses.forEach( (address)=> { %>
                                    <tr>
                                        <label for="<% address.fullName %>"></label>
                                        <td>
                                            <%= address.fullName %>
                                        </td>
                                        <td>
                                            <%= address.fullAddress %>
                                        </td>
                                        <td>
                                            <%= address.phoneNumber %>
                                        </td>
                                        <td>
                                            <%= address.pincode %>
                                        </td>
                                        </label>
                                        <td>
                                            <input type="radio" name="selectedAddress"
                                                value="<%= JSON.stringify(address) %>" />
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-primary">Continue</button>
                    </form>
                    <% } %>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>